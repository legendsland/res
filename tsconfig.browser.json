{
    "compilerOptions": {
        "strict": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext",
        ],
        "allowJs": true,
        "jsx": "react-jsx",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "outDir": "./out",
        "sourceMap": true,
        "listFiles": false,
        "newLine": "LF",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "types": ["jest", "@testing-library/jest-dom"]
    },
    "include": [
        "src/browser/**/*",
        "test/**/*",
        "node_modules/@types/jest"
    ],
    "exclude": [
        "node_modules",
        "out",
        "src/node/**/*"
    ]
}
