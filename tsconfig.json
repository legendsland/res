{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "outDir": "./out",
        "sourceMap": true,
        "listFiles": false,
        "newLine": "LF",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/node/**/*",
        "test/**/*",
    ],
    "exclude": [
        "node_modules",
        "out",
        "src/browser/**/*"
    ]
}
