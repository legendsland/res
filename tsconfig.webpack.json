{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "dom",
            "es6",
        ],
        "allowJs": true,
        "jsx": "react-jsx",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "outDir": "out",
        "sourceMap": true,
        "listFiles": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/browser/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
